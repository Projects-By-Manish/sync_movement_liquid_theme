<section class="container" style="padding: 60px 20px;">
  <div style="display:flex; gap:40px; flex-wrap:wrap;">
    <div style="flex:1; min-width:280px;">
      {% if product.featured_image %}
        <img src="{{ product.featured_image | img_url: '600x' }}" style="width:100%; border-radius:12px;" alt="{{ product.title }}">
      {% endif %}
    </div>
    <div style="flex:1; min-width:280px;">
      <h1>{{ product.title }}</h1>
      <p style="font-size:1.3rem; font-weight:600;">{{ product.price | money }}</p>
      {{ product.description }}
      {% form 'product', product %}
        <select name="id" style="margin:16px 0; padding:10px; width:100%; border-radius:8px; border:1px solid #ccc;">
          {% for variant in product.variants %}
            <option value="{{ variant.id }}" {% unless variant.available %}disabled{% endunless %}>
              {{ variant.title }} â€” {{ variant.price | money }}
            </option>
          {% endfor %}
        </select>
        <button type="submit" name="add" class="btn" style="width:100%;">Add to Cart</button>
      {% endform %}
    </div>
  </div>
</section>
{% schema %}
{ "name": "Product", "settings": [] }
{% endschema %}
