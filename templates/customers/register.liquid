{% layout 'theme' %}
<div class="container" style="padding: 60px 20px; text-align:center;">
  <h2>Create Account</h2>
  {% form 'create_customer' %}
    {{ form.errors | default_errors }}
    <p><input type="text" name="customer[first_name]" placeholder="First Name" /></p>
    <p><input type="text" name="customer[last_name]" placeholder="Last Name" /></p>
    <p><input type="email" name="customer[email]" placeholder="Email" required /></p>
    <p><input type="password" name="customer[password]" placeholder="Password" required /></p>
    <button type="submit" class="btn">Register</button>
  {% endform %}
</div>
